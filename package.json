{
    "name": "task-manager",
    "version": "1.0.0",
    "description": "Modern task manager with hierarchical graph visualization",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "webpack --mode development --watch & electron .",
        "build": "webpack --mode production && electron-builder",
        "webpack": "webpack"
    },
    "author": "Ilya Horishko",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "css-loader": "^6.8.1",
        "electron": "^38.2.0",
        "electron-builder": "^24.9.1",
        "style-loader": "^3.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "vis-data": "^7.1.9",
        "vis-network": "^9.1.9"
    },
    "build": {
        "appId": "com.ilyahorishko.taskmanager",
        "productName": "Task Manager",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "dist/renderer/**/*",
            "LICENSE",
            "package.json"
        ],
        "extraFiles": [
            "LICENSE"
        ],
        "win": {
            "target": "portable"
        },
        "compression": "maximum"
    }
}
